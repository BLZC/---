.slide-image {
  width: 100%;
  height: 800rpx;
}

.bottom-zz {
  height: 55px;
}

.vcontainer {
  margin: 0 15px;
  padding: 10px 0;
  font-size: 14px;
  border-bottom: 1px solid #eee;
}

.cinline {
  display: inline-block;
}
.vsend {
  width: 15%;
  text-align: left;
  color: #999;
}

.vto {
  width: 80%;
}

.vicon {
  width: 5%;
  text-align: right;
}
.van-action-sheet {
  max-height: 90% !important;
  color: #333;
  padding: 20px 8px 0;
}
.van-hairline--top:after {
  border: none !important;
}
.van-action-sheet__cancel,
.van-action-sheet__item {
  font-size: 16px;
  text-align: center;
  background-color: #fff;
}
.van-action-sheet__cancel {
  width: 96%;
  height: 50px;
  font-size: 16px;
  line-height: 50px;
  background-color: red;
  border-radius: 60px !important;
  margin: 50px 2% 10px 2% !important;
  font-weight: 700;
}
.van-action-sheet__item--disabled {
  color: #c9c9c9;
}
.van-action-sheet__item--disabled.van-action-sheet__item--hover {
  background-color: #fff;
}
.van-action-sheet__subname {
  margin-left: 5px;
  font-size: 12px;
  color: #7d7e80;
}
.van-action-sheet__header {
  font-size: 16px;
  font-weight: 500;
  line-height: 44px;
  text-align: center;
}
.van-action-sheet__close {
  position: absolute !important;
  top: 0;
  right: 0;
  padding: 0 15px;
  font-size: 18px !important;
  line-height: inherit !important;
  color: #999;
}
.van-action-sheet__name {
  height: 20px;
  text-align: left;
  color: #999;
  font-size: 14px;
}
.van-action-sheet__list {
  text-align: left;
  margin: 15px 0;
  font-size: 13px;
}
.van_item {
  display: inline-block;
  margin-left: 10rpx;
  background-color: #f5f5f5;
  padding: 10rpx;
  border-radius: 10rpx;
}
.van_item_hover {
  color: red;
  border: 1rpx solid red;
  padding: 9rpx;
}
.rightContent {
  text-align: left;
  padding-top: 100rpx;
}
.ft1_price {
  color: red;
  font-size: 32rpx;
  font-weight: 700;
}
.ft1_Selected {
  color: #999;
  font-size: 26rpx;
}
