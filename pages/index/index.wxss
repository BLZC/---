  border-radius: 30rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin: 0 10%;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}
.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
}
.p-class {
  background-color: #fff;
  font-size: 30rpx;
